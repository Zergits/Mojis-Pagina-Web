    <script>
        let mojisNavHistory = ['mojisMainView'];
        const mojisBackBtn = document.getElementById('mojisBackBtn');
        const mojisWidget = document.getElementById('mojisWidget');
        const mojisOverlay = document.getElementById('mojisOverlay');

        function openMojisWidget() {
            mojisWidget.style.display = 'flex';
            mojisOverlay.style.display = 'block';
            document.body.style.overflow = 'hidden'; // Evita scroll de fondo
        }

        function closeMojisWidget() {
            mojisWidget.style.display = 'none';
            mojisOverlay.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        function showMojisView(id) {
            document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            mojisNavHistory.push(id);
            mojisBackBtn.style.display = 'block';
            mojisWidget.scrollTop = 0;
        }

        function goBackMojis() {
            if (mojisNavHistory.length > 1) {
                mojisNavHistory.pop();
                const prev = mojisNavHistory[mojisNavHistory.length - 1];
                document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
                document.getElementById(prev).classList.add('active');
                if (prev === 'mojisMainView') mojisBackBtn.style.display = 'none';
                mojisWidget.scrollTop = 0;
            }
        }
    </script>
